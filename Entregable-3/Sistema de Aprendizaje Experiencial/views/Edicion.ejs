<!-- views/Principal.ejs -->
<!doctype html>
<html ng-app="app">
<head>
    <script src="jquery-2.0.3.min.js"></script>
    <script src="angular.js"></script>
    <script src="angular-animate.js"></script>
    <script src="angular-sanitize.js"></script>
    <script src="ui-bootstrap-tpls-2.1.3.js"></script>
    <script src="angular-messages.js"></script>
    <script src="Controlador.js"></script>
    <link href="bootstrap.css" rel="stylesheet">
    <link href="app.css" rel="stylesheet" />
</head>
<body>
    <%if(user.clasificacion !=0){%>
    <div id = "bloque_blanco_up">
        <h1 id = "titulo">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;SAE</h1>
        <img src="UTFSM.gif" id = "usm-home" alt="usm-home">
    </div>
    <br/>
    <nav class="navbar navbar-default">
        <div id = "logout">
            <a  href="/Perfil"><span <%if (user.tipo == 0 && user.clasificacion == 1){%> style = "color: red;" <%}%> <%if (user.tipo == 0 && user.clasificacion == 2){%> style = "color: black;" <%}%> <%if (user.tipo == 0 && user.clasificacion == 3){%> style = "color: green;"  <%}%> <%if (user.tipo == 0 && user.clasificacion == 4){%> style = "color: brown;"<%}%>class="glyphicon glyphicon-user"></span><%=user.nombre%></a>
            <a href="/login"><span class="glyphicon glyphicon-log-out"></span> Salir</a>
        </div>
        <div class="container-fluid">
            <ul class="nav navbar-nav">
                <li class="dropdown" ng-controller="DropdownCtrl" uib-dropdown keyboard-nav>
                    <a class="dropdown-toggle" data-toggle="dropdown" uib-dropdown-toggle href="#"><span uib-dropdown-toggle class="glyphicon glyphicon-menu-hamburger"></span></a>
                    <ul class="dropdown-menu" uib-dropdown-menu role="menu">
                        <li><a href="/Principal">Inicio</a></li>
                        <li class="divider"></li>
                        <%if(user.tipo!=2){%>
                        <li class="dropdown-header">Mis Cursos</li>
                        <%for (var i=0;i<asignaturas.length;i++) {%>
                        <li><a href="/Curso/<%=asignaturas[i]%>"><%=asignaturas[i]%></a></li>
                        <%}%>
                        <%}%>
                        <%if(user.tipo==2){%>
                        <li class="dropdown-header">Registros</li>
                        <li><a href="/RegistrarProfesor">Profesor</a></li>
                        <li><a href="/RegistrarAlumno">Alumno</a></li>
                        <%}%>
                        <li class="divider"></li>
                        <li><a href="/Ramos">Ramos</a></li>
                        <%if(user.tipo==2){%>
                        <li><a href="/CrearCurso">Nuevo Ramo</a></li>
                        <%}%>
                    </ul>
                </li>
                <li class="active"><a href="#">Perfil</a></li>
            </ul>
        </div>
    </nav>
    <br/>
    <%if(user.tipo!=2){%>
    <div class = "container" id = "c-derecho">
        <br/>
        <div class = "container" id = "cursos">
            <a   href="#"><span class="glyphicon glyphicon-menu-right"  style="margin-top: 10px;"></span>Mis cursos</a>
            <br/>
            <div ng-controller="PopoverDemoCtrl">
                <%for (var i=0;i<asignaturas.length;i++) {%>
                <a href="/Curso/<%=asignaturas[i]%>"  uib-popover="  <%=asignaturas[i]%>!" popover-trigger="'mouseenter'">  &nbsp;&nbsp; <span class="glyphicon glyphicon-book"></span> <%=asignaturas[i]%></a>
                <br/>
                <%}%>
            </div>
        </div>
    </div>
    <%}%>
    <h2 style="color: white;left:460px;top:160px;position: absolute">Enfoque Normal</h2>
    <button  style = "left: 40px;min-width: 220px;top: 230px;position: absolute;" type="button" class="btn btn-default">Convergente</button>&nbsp;
    <button  style = "left: 300px;min-width: 220px;top: 230px;position: absolute;" type="button" class="btn btn-default">Divergente</button>&nbsp;
    <button  style = "left: 560px;min-width: 220px;top: 230px;position: absolute;" type="button" class="btn btn-default">Asimilador</button>&nbsp;
    <button  style = "left: 820px;min-width: 220px;top: 230px;position: absolute;" type="button" class="btn btn-default">Acomodador</button>&nbsp;
    <h2 style="color: white;left:420px;top:300px;position: absolute">Enfoque Introductorio</h2>
    <button  style = "left: 40px;min-width: 220px;top: 360px;position: absolute;" type="button" class="btn btn-default">Convergente</button>&nbsp;
    <button  style = "left: 300px;min-width: 220px;top: 360px;position: absolute;" type="button" class="btn btn-default">Divergente</button>&nbsp;
    <button  style = "left: 560px;min-width: 220px;top: 360px;position: absolute;" type="button" class="btn btn-default">Asimilador</button>&nbsp;
    <button  style = "left: 820px;min-width: 220px;top: 360px;position: absolute;" type="button" class="btn btn-default">Acomodador</button>&nbsp;

    <%}%>
</body>
</html>
